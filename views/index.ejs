<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1>Homepage</h1>
    <button><a href="/new">Add new message</a></button>
    <ul>
        <% messages.forEach((message) => { %>
            <li>
                <h3><%= message.user %></h3>
                <h5>Created on <%= message.added %></h5>
                <p><%= message.text %></p>
            </li>
        <% }) %>
    </ul>
</body>
</html>